@model IEnumerable<eCommerceForPeripherials.Models.Admin.Products>

@{
    ViewData["Title"] = "Products";
}

<h1 style="text-align:center;">ხარჯთაღრიცხვა $</h1>

<p>
    <a style="color:blue; text-align:center;" asp-controller="Admin" asp-action="CreateProduct">Create New</a>
</p>
<div style="justify-content:center; text-align:center;">
    <table class="table">
    <thead style="text-align:center;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="text-align:center;">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="EditProduct" asp-route-id="@item.Id">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>

</table>

</div>
<hr />
@{
        decimal totalPrice = 0;
        foreach(var item in Model)
        {
            totalPrice = totalPrice + Convert.ToDecimal(item.Price);
        }
        <h2 style="text-align:center;">Total Cost: @totalPrice</h2>
    }