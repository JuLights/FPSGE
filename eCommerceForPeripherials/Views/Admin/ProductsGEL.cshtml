@model IEnumerable<eCommerceForPeripherials.Models.Admin.ProductsGEL>

@{
    ViewData["Title"] = "ProductsGEL";
}

<h1>ProductsGEL</h1>

<p>
    <a asp-action="CreateProductGEL">Create New</a>
</p>
<div style="justify-content:center; text-align:center;">

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceGEL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceGEL)₾
            </td>
            <td>
                <a asp-action="EditProductGEL" asp-route-id="@item.Id">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="DeleteProductGEL" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
    </table>
</div>

<hr />
@{
        decimal totalPrice = 0;
        foreach(var item in Model)
        {
            totalPrice = totalPrice + Convert.ToDecimal(item.PriceGEL);
        }
        <h2 style="text-align:center;">Total Cost: @totalPrice₾</h2>
    }